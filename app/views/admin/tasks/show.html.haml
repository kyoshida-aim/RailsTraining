%h1= t(".header", user: @user.login_id)

.nav.justify-content-end
  = link_to(t('helpers.list'), admin_user_tasks_path(@user.id), class: 'nav-link')

%table.table.table-hover
  %tbody
    %tr
      %th= Task.human_attribute_name(:id)
      %td= @task.id
    %tr
      %th= Task.human_attribute_name(:name)
      %td= @task.name
    %tr
      %th= Task.human_attribute_name(:description)
      %td= simple_format(h(@task.description), {}, sanitize: false, wrapper_tag: 'div')
    %tr
      %th= Task.human_attribute_name(:created_at)
      %td= @task.created_at
    %tr
      %th= Task.human_attribute_name(:updated_at)
      %td= @task.updated_at
    %tr
      %th= Task.human_attribute_name(:deadline)
      %td= @task.deadline
    %tr
      %th= Task.human_attribute_name(:status)
      %td= @task.status_i18n
    %tr
      %th= Task.human_attribute_name(:priority)
      %td= @task.priority_i18n
    %tr
      %th= Label.model_name.human
      %td
        - @task.labels.each do |label|
          .badge.badge-pill.badge-info= label.name
