%h1= t(".header")

- if @user.errors.present?
  %ul#error_explanation
    - @user.errors.full_messages.each do |message|
      %li= message

= form_with(model: [:admin, @user], local: true) do |f|
  = f.label(:login_id, "#{User.human_attribute_name(:login_id)}: #{@user.login_id}")
  .form-check
    = f.label(:admin, User.human_attribute_name(:admin)) do
      = f.check_box(:admin, class: 'form-check-input input-admin')
      = User.human_attribute_name(:admin)
  = f.submit(t("helpers.submit.update"), class: "btn btn-primary")
